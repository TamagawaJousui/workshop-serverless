{
    "$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "style": {
                "useNamingConvention": {
                    "level": "error",
                    "options": {
                        "conventions": [
                            {
                                "selector": {
                                    "kind": "objectLiteralProperty",
                                    "scope": "any"
                                },
                                "match": "[a-zA-Z_].*"
                            }
                        ]
                    }
                }
            }
        }
    },
    "files": {
        "ignore": [".esbuild/**"]
    }
}
